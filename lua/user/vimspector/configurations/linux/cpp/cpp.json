{
    "configurations": {
        "Launch": {
            "adapter": "vscode-cpptools",
            "filetypes": [
                "cpp",
                "c",
                "objc",
                "rust"
            ],
            "configuration": {
                "type": "cppdbg",
                "request": "launch",
                "program": "${binary:${workspaceRoot\\}}",
                "args": [
                    "*${args}"
                ],
                "cwd": "${workspaceRoot}",
                "environment": [
                    {"name": "VIMRUNTIME", "value": "${workspaceRoot}"}
                ],
                "externalConsole": true,
                "stopAtEntry": true,
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
            "breakpoints": {
                "exception": {
                    "raised": "N",
                    "uncaught": ""
                }
            }
        },
        "Attach": {
            "adapter": "vscode-cpptools",
            "filetypes": [
                "cpp",
                "c",
                "objc",
                "rust"
            ],
            "configuration": {
                "request": "attach",
                "program": "${binary:${workspaceRoot\\}}",
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
            "breakpoints": {
                "exception": {
                    "raised": "N",
                    "uncaught": ""
                }
            }
        }
    }
}
